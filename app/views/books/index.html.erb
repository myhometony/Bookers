<h1>Books</h1>

<% @books.each do |book| %>

<p>本のタイトル</p>
<span><%= book.title %></span>

<span>
    <%= link_to "Show", book_path(book.id) %>
</span>


<% end %>



<h2>New book</h2>

<%= form_with model: @book do |f| %>
<h4>本のタイトル</h4>
<%= f.text_field :title %>

<h4>感想</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>





