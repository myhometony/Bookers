
<h1>Books</h1>

<% @books.each do |book| %>

<table>

  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>

    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <td>
    <%=link_to "Show",book_path(book.id) %>
    </td>

    <td>
　　<%=link_to "Edit",edit_book_path(book.id) %>
    </td>
    <td>
    <%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %>
    </td>
<% end %>

    <td>

    </td>

    </tr>
  </tbody>

</table>





<h2>New book</h2>

<%= form_with model: @book do |f| %>
<h4>本のタイトル</h4>
<%= f.text_field :title %>

<h4>感想</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>





